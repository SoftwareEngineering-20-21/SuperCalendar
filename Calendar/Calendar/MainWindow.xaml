<Window x:Class="Calendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Button x:Name="RegisterButton" Content="Зареєструватись" HorizontalAlignment="Center" Margin="0,103,0,0" Grid.Row="2" VerticalAlignment="Top" Height="56" Width="200" FontSize="24" Click="RegisterButton_Click"/>
        <Button x:Name="LogInButton" Content="Увійти" HorizontalAlignment="Center" Margin="0,186,0,0" Grid.Row="2" VerticalAlignment="Top" Height="62" Width="200" FontSize="24" Click="LogInButton_Click"/>
        <Label Content="Super Calendar" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="2" VerticalAlignment="Top" FontSize="48"/>
        <Button Content="Чорний хід" HorizontalAlignment="Left" Margin="695,338.4,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
