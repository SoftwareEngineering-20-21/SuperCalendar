<Window x:Class="Calendar.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="450">
    <StackPanel>
        <Label Content="Вхід" HorizontalAlignment="Center" FontSize="48"></Label>
        <Label Content="Логін"  HorizontalAlignment="Center" FontSize="20" RenderTransformOrigin="0.492,-0.676"></Label>
        <TextBox x:Name="LogTextBox" FontSize="20" Background="LightGray" Margin="105,0"/>
        
        <Label Content="Пароль"  HorizontalAlignment="Center" FontSize="20"></Label>
        <PasswordBox x:Name="PasswordBox" FontSize="20" Margin="105,0" Background="LightGray"/>
        <Button x:Name="LogInButton" Content="Увійти" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Height="56" Width="136" FontSize="24" Click="LogInButton_Click" />
       
        
        
    </StackPanel>
</Window>
